    <h1>Dette er en nettside</h1>
    <div id="ordet"></div>
    <div id="poeng"></div>
   Skriv her <input type="text" id="skriv" oninput="riktig()">
    
  <script>
    
      
      //Liste med ord
        var liste = ["hei","hade","moro", "cola", "artig"];
      //Velger ut et tilfeldig ord som brukeren m책 skrive
        
      
            
      var randomItem; 
      
      
      //Lager et nytt ord n책r brukeren har f책tt til forrige ord
      function nyttOrd(){
                
          randomItem = liste[Math.floor(Math.random()*liste.length)];
          document.getElementById("ordet").innerText = "Ordet er "+ randomItem;

      }
      
      //Sjekker om brukeren har f책tt til ordet automatisk.
        function riktig(){
            document.getElementById("skriv").value
            if(skriv.value == randomItem){
                console.log("Riktig");
                nyttOrd();
                console.log(skriv.value);

            }
            
        }
</script>
  
